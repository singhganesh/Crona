# importing speech recognition package from google api

import os  # to save/open files
import random
import webbrowser
from datetime import datetime
import playsound  # to play saved mp3 file
import speech_recognition as sr
from gtts import gTTS  # google text to speech


def wishMe():
    time = int(datetime.now().hour)
    if 0 <= time < 12:
        assistant_speaks("Good Morning")

    if 12 <= time < 16:
        assistant_speaks("Good Afternoon")

    if 16 <= time < 20:
        assistant_speaks("Good Evening")

    else:
        assistant_speaks("Good Night")


num = 1


def assistant_speaks(output):
    global num

    # num to rename every audio file
    # with different name to remove ambiguity
    num += 1
    print("Crona : ", output)

    toSpeak = gTTS(text=output, lang='en', slow=False)
    # saving the audio file given by google text to speech
    file = str(num) + ".mp3"
    toSpeak.save(file)

    # playsound package is used to play the same file.
    playsound.playsound(file, True)
    os.remove(file)


def get_audio():
    rObject = sr.Recognizer()
    audio = ' '

    with sr.Microphone() as source:
        print("Speak...")

        # recording the audio using speech recognition
        audio = rObject.listen(source, phrase_time_limit=2)
    print("Stop...")  # limit 2 secs

    try:

        text = rObject.recognize_google(audio, language='en-US')
        print("You : ", text)
        return text

    except:

        assistant_speaks("Could not understand your audio, PLease try again !")
        return 0


